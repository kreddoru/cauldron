{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_token":   ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "token": "{{user `aws_token`}}",
    "region": "us-east-1",
    "source_ami": "ami-2d39803a",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-example {{timestamp}}",
    "subnet_id": "subnet-95ccd3e3",
    "vpc_id": "vpc-8923a8ec"
	
  }],
  
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo aptitude install -y ruby ruby1.8-dev build-essential wget libruby1.8 rubygems",
      "sudo apt-get install -y chef"
    ]
  }]
  
}
